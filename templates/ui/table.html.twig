<div class="ef-table ef-table-size-large ef-table-border ef-table-hover" style="width: fit-content; min-width: 600px;">
    {% if toolbar %}
        {{ toolbar|raw }}
    {% endif %}
    <div class="ef-spin">
        <div class="ef-table-container">
            <div class="ef-scrollbar ef-scrollbar-type-embed" style="height: 100%;">
                <div class="ef-scrollbar-container ef-table-content ef-table-content-scroll-x">
                    <table class="ef-table-element" cellpadding="0" cellspacing="0">
                        <colgroup>
                            {% for header in tableHeaders %}
                                <col>
                            {% endfor %}
                        </colgroup>
                        <thead>
                            <tr class="ef-table-tr">
                                {% for header in tableHeaders %}
                                    <th class="ef-table-th">
                                        <span class="ef-table-cell ef-table-cell-align-left">
                                            <span class="ef-table-th-title">{{ header }}</span>
                                        </span>
                                    </th>
                                {% endfor %}
                            </tr>
                        </thead>
                        <tbody>
																{% if entities is empty %}
																		<tr>
																				<td colspan="{{ tableHeaders|length }}" class="ef-table-td ef-table-td-empty">
																						<div class="empty-state" style="text-align: center; padding: 40px 0; background-color: #f9fafb; border-radius: 8px;">
																								<i class="fa-solid fa-inbox" style="font-size: 48px; color: #a3a3a3; margin-bottom: 16px;"></i>
																								<p style="color: #6b7280; font-size: 16px; margin: 8px 0;">没有数据可显示</p>
																								<p style="color: #9ca3af; font-size: 14px;">添加新数据后会显示在此处</p>
																						</div>
																				</td>
																		</tr>
																{% else %}
                                {% for item in entities %}
                                    <tr class="ef-table-tr">
                                        {% for header in tableHeaders %}
                                            <td class="ef-table-td">
                                                <span class="ef-table-cell ef-table-cell-align-left">
                                                    {% if instanceof(attribute(item, header), 'DateTime') %}
                                                        <span class="ef-table-td-content">
                                                            {{ attribute(item, header).format('Y-m-d H:i:s') }}
                                                        </span>
                                                    {% else %}
                                                        <span class="ef-table-td-content">
                                                            {{ attribute(item, header) }}
                                                        </span>
                                                    {% endif %}
                                                </span>
                                            </td>
                                        {% endfor %}
                                    </tr>
                                {% endfor %}
                            {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
