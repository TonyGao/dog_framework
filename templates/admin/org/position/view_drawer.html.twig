<link rel="stylesheet" href="{{ asset('sunui/components/position-drawer.css') }}">
<div class="ef-drawer-container" style="z-index: 1001; display: none;" id="{{ drawerId }}">
    <div class="ef-drawer-mask" maskid="{{ drawerId }}"></div>
    <div class="ef-drawer" style="right: -650px; width: 650px; box-shadow: -4px 0 20px rgba(0,0,0,0.15);">
        <div class="ef-drawer-header">
            <div class="ef-drawer-title">
                <i class="fa-solid fa-user-tie" style="margin-right: 12px; font-size: 18px;"></i>
                {{ position.name }}
                <span style="font-size: 14px; font-weight: 400; margin-left: 8px; opacity: 0.8;">岗位详情</span>
            </div>
            <div tabindex="-1" role="button" aria-label="Close" class="ef-drawer-close-btn">
                <span class="ef-icon-hover">
                    <svg viewbox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg" stroke="currentColor" class="ef-icon ef-icon-close" stroke-width="4" stroke-linecap="butt" stroke-linejoin="miter">
                        <path d="M9.857 9.858 24 24m0 0 14.142 14.142M24 24 38.142 9.858M24 24 9.857 38.142"></path>
                    </svg>
                </span>
            </div>
        </div>
        <div class="ef-drawer-body">
            <div class="ef-drawer-content">
                <!-- 基本信息 -->
                <div class="ef-section">
                    <div class="ef-section-header">
                        <i class="fa-solid fa-info-circle"></i>
                        <span>基本信息</span>
                    </div>
                    <div class="ef-detail-view ef-detail-two-columns">
                        <div class="ef-detail-row-group">
                            <div class="ef-detail-item">
                                <div class="ef-detail-label">岗位名称</div>
                                <div class="ef-detail-value">{{ position.name }}</div>
                            </div>
                            <div class="ef-detail-item">
                                <div class="ef-detail-label">岗位编码</div>
                                <div class="ef-detail-value">{{ position.code ?: '无' }}</div>
                            </div>
                        </div>
                        <div class="ef-detail-row-group">
                            <div class="ef-detail-item">
                                <div class="ef-detail-label">所属部门</div>
                                <div class="ef-detail-value">{{ position.department ? position.department.name : '无' }}</div>
                            </div>
                            <div class="ef-detail-item">
                                <div class="ef-detail-label">岗位类型</div>
                                <div class="ef-detail-value">{{ position.type ? position.type.stringValue : '无' }}</div>
                            </div>
                        </div>
                        <div class="ef-detail-row-group">
                            <div class="ef-detail-item">
                                <div class="ef-detail-label">岗位级别</div>
                                <div class="ef-detail-value">{{ position.level ? position.level.name : '无' }}</div>
                            </div>
                            <div class="ef-detail-item">
                                <div class="ef-detail-label">上级岗位</div>
                                <div class="ef-detail-value">{{ position.parent ? position.parent.name : '无' }}</div>
                            </div>
                        </div>
                        <div class="ef-detail-row-group">
                            <div class="ef-detail-item">
                                <div class="ef-detail-label">编制人数</div>
                                <div class="ef-detail-value">{{ position.headcount ?: '未设置' }}</div>
                            </div>
                            <div class="ef-detail-item">
                                <div class="ef-detail-label">状态</div>
                                <div class="ef-detail-value">
                                    {% if position.state %}
                                        <span class="ef-badge ef-badge-success">✓ 启用</span>
                                    {% else %}
                                        <span class="ef-badge ef-badge-danger">✗ 停用</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {% if position.responsibility %}
                <!-- 岗位职责 -->
                <div class="ef-section">
                    <div class="ef-section-header">
                        <i class="fa-solid fa-tasks"></i>
                        <span>岗位职责</span>
                    </div>
                    <div class="ef-detail-content">
                        {{ position.responsibility|nl2br }}
                    </div>
                </div>
                {% endif %}

                {% if position.requirement %}
                <!-- 任职要求 -->
                <div class="ef-section">
                    <div class="ef-section-header">
                        <i class="fa-solid fa-graduation-cap"></i>
                        <span>任职要求</span>
                    </div>
                    <div class="ef-detail-content">
                        {{ position.requirement|nl2br }}
                    </div>
                </div>
                {% endif %}

                <!-- 岗位人员 -->
                <div class="ef-section">
                    <div class="ef-section-header">
                        <i class="fa-solid fa-users"></i>
                        <span>岗位人员 ({{ employees|length }} 人)</span>
                    </div>
                    {% if employees|length > 0 %}
                        <div class="ef-table ef-table-size-medium">
                            <div class="ef-table-container">
                                <table class="ef-table-element">
                                    <thead>
                                        <tr class="ef-table-tr">
                                            <th class="ef-table-th">员工姓名</th>
                                            <th class="ef-table-th">工号</th>
                                            <th class="ef-table-th">入职日期</th>
                                            <th class="ef-table-th">状态</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for employee in employees %}
                                            <tr class="ef-table-tr">
                                                <td class="ef-table-td">{{ employee.name }}</td>
                                                <td class="ef-table-td">{{ employee.employeeNo ?: '无' }}</td>
                                                <td class="ef-table-td">{{ employee.hireDate ? employee.hireDate|date('Y-m-d') : '未设置' }}</td>
                                                <td class="ef-table-td">
                                                    {% if employee.status == 'active' %}
                                                        <span class="ef-badge ef-badge-success">✓ 在职</span>
                                                    {% else %}
                                                        <span class="ef-badge ef-badge-danger">✗ 离职</span>
                                                    {% endif %}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    {% else %}
                        <div class="ef-empty-state">
                            <i class="fa-solid fa-user-slash"></i>
                            <div class="ef-empty-state-text">暂无员工数据</div>
                            <div class="ef-empty-state-desc">该岗位尚未分配员工</div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="ef-drawer-footer">
            <button class="cancelDrawer ef-drawer-btn ef-drawer-btn-secondary" type="button">关闭</button>
            <button type="button" class="ef-drawer-btn ef-drawer-btn-primary edit-button" onclick="openPositionEditDrawer({{ position.id }})">
                    <i class="fa-solid fa-edit"></i>
                    编辑
                </button>
        </div>
    </div>
</div>





<script>
// 抽屉打开时添加body类，防止页面布局变化
function addDrawerOpenClass() {
    document.body.classList.add('ef-drawer-open');
}

// 抽屉关闭时移除body类
function removeDrawerOpenClass() {
    document.body.classList.remove('ef-drawer-open');
}

// 监听抽屉显示事件
document.addEventListener('DOMContentLoaded', function() {
    // 当前抽屉显示时添加类
    addDrawerOpenClass();
    
    // 监听关闭按钮点击
    const closeBtn = document.querySelector('.ef-drawer-close-btn');
    if (closeBtn) {
        closeBtn.addEventListener('click', function() {
            removeDrawerOpenClass();
        });
    }
    
    // 监听遮罩层点击
    const overlay = document.querySelector('.ef-drawer-overlay');
    if (overlay) {
        overlay.addEventListener('click', function() {
            removeDrawerOpenClass();
        });
    }
});

function openPositionEditDrawer(positionId) {
    // 关闭当前drawer
    const currentDrawer = document.querySelector('.ef-drawer-container[style*="display: block"], .ef-drawer-container:not([style*="display: none"])');
    if (currentDrawer) {
        removeDrawerOpenClass();
        $().hideDrawer(currentDrawer.id);
    }
    
    // 打开编辑drawer
    fetch('/admin/org/position/drawer', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest'
        },
        body: JSON.stringify({
            positionId: positionId,
            action: 'edit'
        })
    })
    .then(response => response.text())
    .then(html => {
        // 移除已存在的drawer
        const existingDrawer = document.getElementById('position-drawer-' + positionId);
        if (existingDrawer) {
            existingDrawer.remove();
        }
        
        // 添加新的drawer到页面
        document.body.insertAdjacentHTML('beforeend', html);
        
        // 显示drawer并添加body类
        $().showDrawer('position-drawer-' + positionId);
        addDrawerOpenClass();
    })
    .catch(error => {
        console.error('Error loading position edit drawer:', error);
        alert('加载岗位编辑失败，请重试');
    });
}
</script>