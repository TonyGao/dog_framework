<section class="app-toolbar">
	<div class="editor-toolbar">
	  <!-- 保存按钮 -->
		  <button class="toolbar-btn" title="保存" id="save-view-button">
			  <i class="fa-solid fa-floppy-disk"></i>
		  </button>
		  <!-- 预览按钮 -->
		  <button class="toolbar-btn" title="预览">
			  <i class="fa-solid fa-eye"></i>
		  </button>
		<!-- 撤销/重做 -->
		<div class="toolbar-group">
			<button class="toolbar-btn" title="上一步">
				<i class="fa-solid fa-rotate-left"></i>
			</button>
			<button class="toolbar-btn" title="下一步">
				<i class="fa-solid fa-rotate-right"></i>
			</button>
		</div>

		<div class="toolbar-divider"></div>

		<!-- 文本格式化 -->
		<div class="toolbar-group">
			<select class="toolbar-select" title="字体选择">
				<option value="Arial">Arial</option>
				<option value="Helvetica">Helvetica</option>
				<option value="Times New Roman">Times New Roman</option>
				<option value="微软雅黑">微软雅黑</option>
			</select>

			<select class="toolbar-select" title="字号选择">
				<option value="12">12px</option>
				<option value="14">14px</option>
				<option value="16">16px</option>
				<option value="18">18px</option>
				<option value="20">20px</option>
			</select>

			<button class="toolbar-btn" title="粗体">
				<i class="fa-solid fa-bold"></i>
			</button>
			<button class="toolbar-btn" title="斜体">
				<i class="fa-solid fa-italic"></i>
			</button>
			<button class="toolbar-btn" title="下划线">
				<i class="fa-solid fa-underline"></i>
			</button>
			<button class="toolbar-btn" title="字体颜色">
				<i class="fa-solid fa-palette"></i>
			</button>
		</div>

		<div class="toolbar-divider"></div>

		<!-- 文本对齐 -->
		<div class="toolbar-group">
			<button class="toolbar-btn" title="左对齐">
				<i class="fa-solid fa-align-left"></i>
			</button>
			<button class="toolbar-btn" title="居中对齐">
				<i class="fa-solid fa-align-center"></i>
			</button>
			<button class="toolbar-btn" title="右对齐">
				<i class="fa-solid fa-align-right"></i>
			</button>
			<button class="toolbar-btn" title="顶部对齐">
				<i class="fa-solid fa-align-left fa-rotate-90"></i>
			</button>
			<button class="toolbar-btn" title="垂直居中">
				<i class="fa-solid fa-align-center fa-rotate-90"></i>
			</button>
			<button class="toolbar-btn" title="底部对齐">
				<i class="fa-solid fa-align-right fa-rotate-90"></i>
			</button>
		</div>

		<div class="toolbar-divider"></div>

		<!-- 表格编辑 -->
		<div class="toolbar-group">
			<button class="toolbar-btn" title="表格背景颜色">
				<i class="fa-solid fa-fill-drip"></i>
			</button>
			<button class="toolbar-btn" title="表格边框">
				<i class="fa-solid fa-border-all"></i>
			</button>
			<button class="toolbar-btn" title="合并单元格">
				<i class="fa-solid fa-table-cells-large"></i>
			</button>
			<button class="toolbar-btn" title="拆分单元格">
				<i class="fa-solid fa-table-cells"></i>
			</button>
			<button class="toolbar-btn" title="内容自动换行">
				<i class="fa-solid fa-arrow-turn-down"></i>
			</button>
			<button class="toolbar-btn" title="横版/竖版切换">
				<i class="fa-solid fa-arrows-left-right-to-line"></i>
			</button>
		</div>
	</div>
	<div class="toolbar-right">
		<div class="toolbar-separator"></div>
		<div class="page-properties">
			<div class="page-property-item">
				<label>页面宽度</label>
				<div class="property-control slider-with-input">
					<div class="slider-container">
						<input type="range" id="page-width-slider" min="800" max="3000" value="1200" class="property-slider">
					</div>
					<div class="input-with-unit">
						<input type="number" id="page-width-value" value="1200" class="property-input">
						<div class="unit-selector">
							<span>px</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
